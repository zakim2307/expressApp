<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container">
      <h1>Item Detailed Page</h1>
      <div>
        <h5>Name : <%= items.name %></h5>
        <h5>Price : <%= items.price %></h5>
      </div>
      <a id="deleteBtn" data-id="<%= items._id %>" class="delete btn" href=""
        >Delete</a
      >
    </div>

    <script>
      deleteBtn.onclick = function (e) {
        e.preventDefault();
        // const id = deleteBtn.dataset.id
        const id = e.target.getAttribute("data-id");
        console.log(id);
        const endpoint = `/items/${id}`;
        fetch(endpoint, {
          method: "DELETE",
        })
          .then((res) => {
            res.json().then((data) => {
              console.log(data);
              window.location.href = data.redirect;
            });
          })
          .catch(() => {});
      };
    </script>
  </body>
</html>
